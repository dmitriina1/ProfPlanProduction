<Window x:Class="ProfPlan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfPlan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Margin="5,5" Background="Transparent">

            <MenuItem Header="Файл" HorizontalAlignment="Left" FontSize="16">
                <MenuItem Header="Создать" FontSize="14" HorizontalAlignment="Left" />
                <MenuItem Header="Открыть" FontSize="14" HorizontalAlignment="Left" Command="{Binding LoadDataCommand}"/>
                <MenuItem Header="Сохранить" FontSize="14" HorizontalAlignment="Left" />
                <MenuItem Header="Сохранить как" FontSize="14" HorizontalAlignment="Left" />
                <MenuItem Header="Выход" FontSize="14" HorizontalAlignment="Left" />
            </MenuItem>
            <ComboBox x:Name="comboBox">
                <ComboBoxItem Content="План"/>
                <ComboBoxItem Content="Факт"/>
            </ComboBox>
        </Menu>
        
    </Grid>
</Window>
