<Window x:Class="ProfPlan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfPlan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        
        <Menu Grid.Row="0" Margin="5,5" Background="Transparent">

            <MenuItem Header="Файл" HorizontalAlignment="Left" FontSize="16">
                <MenuItem Header="Создать" FontSize="14" HorizontalAlignment="Left" />
                <MenuItem Header="Открыть" FontSize="14" HorizontalAlignment="Left" Command="{Binding LoadDataCommand}"/>
                <MenuItem Header="Сохранить" FontSize="14" HorizontalAlignment="Left" />
                <MenuItem Header="Сохранить как" FontSize="14" HorizontalAlignment="Left" />
                <MenuItem Header="Выход" FontSize="14" HorizontalAlignment="Left" />
            </MenuItem>
            <ComboBox x:Name="comboBox" SelectedIndex="{Binding SelectedComboBoxIndex}">
                <ComboBoxItem  Content="План"/>
                <ComboBoxItem Content="Факт"/>
            </ComboBox>
        </Menu>
        
        <ListBox Grid.Row="1" Grid.Column="0" x:Name="myListBox" SelectionMode="Single" 
 ItemsSource="{Binding DisplayedTables}"
                 SelectedItem="{Binding SelectedTable}"
 DisplayMemberPath="Tablename">
        </ListBox>
        
        <GridSplitter Grid.Row="1" Grid.Column="1" ShowsPreview="False" Width="3"
          HorizontalAlignment="Center" VerticalAlignment="Stretch" />
        <DataGrid Grid.Row="1" Grid.Column="2" ItemsSource="{Binding SelectedTable.ExcelData}"/>

    </Grid>
</Window>
